<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:weightSum="162"
            android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|bottom"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="160"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="2pt">

            <com.xeonqi.gobang.view.ChessBoardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#dbeebd"
                android:id="@+id/chessboard"
                >
            </com.xeonqi.gobang.view.ChessBoardView>
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/labeText"
            android:id="@+id/textView" />
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:padding="2pt">

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start"
                    android:layout_weight="0.95"
                    android:id="@+id/button_start" android:layout_gravity="bottom"
                    android:background="#7b0606"
                />

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.95"
                    android:text="Stop"
                    android:id="@+id/button_stop"
                android:background="#7b0606"
                android:layout_gravity="bottom"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:padding="2pt">

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset"
                    android:layout_weight="0.95"
                android:background="#7b0606"
                android:id="@+id/button_reset" android:layout_gravity="bottom"
                />

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Regress"
                android:background="#7b0606"
                android:layout_weight="0.95"
                    android:id="@+id/button_regress" android:layout_gravity="bottom"/>
        </LinearLayout>

</LinearLayout>

